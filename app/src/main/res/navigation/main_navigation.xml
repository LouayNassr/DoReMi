<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.doremi.Fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_drawerActivity"
            app:destination="@id/drawerActivity" />
    </fragment>
    <activity
        android:id="@+id/drawerActivity"
        android:name="com.example.doremi.Activities.DrawerActivity"
        android:label="app_bar_drawer"
        tools:layout="@layout/app_bar_drawer" />
</navigation>