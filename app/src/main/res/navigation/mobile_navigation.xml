<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_playlists">

    <fragment
        android:id="@+id/nav_playlists"
        android:name="com.example.doremi.Fragments.PlaylistFragment"
        android:label="@string/menu_playlists"
        tools:layout="@layout/fragment_playlists" >
        <action
            android:id="@+id/action_nav_playlists_to_nav_songs"
            app:destination="@id/nav_songs" />
    </fragment>

    <fragment
        android:id="@+id/nav_songs"
        android:name="com.example.doremi.Fragments.SongsFragment"
        android:label="@string/menu_songs"
        tools:layout="@layout/fragment_songs" >
        <action
            android:id="@+id/action_nav_songs_to_playerFragment"
            app:destination="@id/playerFragment"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.doremi.Fragments.HomeFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_playerFragment"
            app:destination="@id/playerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_nav_home_to_nav_songs"
            app:destination="@id/nav_songs" />
        <action
            android:id="@+id/action_nav_home_to_nav_playlists"
            app:destination="@id/nav_playlists"
            app:enterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_nav_home_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.doremi.Fragments.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="artistName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="songName"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="songUrl"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.doremi.Fragments.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
</navigation>